<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/jidian_bg"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_weight="1">
    <ImageView
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
    android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/a"/>
    <TextView
        android:id="@+id/tv_jidianxiangqing_title"
        android:textSize="18sp"
        android:gravity="center"
        android:text="集电线路"
        android:textColor="#ffffff"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
      />
    <ImageView
       android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/a"/>
</LinearLayout>
    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tab_jidianxiangqing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:pstsIndicatorColor="#ffffff"
        app:pstsIndicatorHeight="2dp"
        app:pstsShouldExpand="true"
        android:layout_weight="1"></com.astuetz.PagerSlidingTabStrip>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_jidianxiangqing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"></android.support.v4.view.ViewPager>
</LinearLayout>
