<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/jidian_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <com.astuetz.PagerSlidingTabStrip
        app:pstsShouldExpand="true"
        android:id="@+id/tab_jidian"
        android:layout_width="match_parent"
        app:pstsIndicatorColor="#ffffff"
        app:pstsIndicatorHeight="2dp"
        android:layout_height="0dp"
        android:layout_weight="1"></com.astuetz.PagerSlidingTabStrip>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_jidian"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"></android.support.v4.view.ViewPager>
</LinearLayout>
